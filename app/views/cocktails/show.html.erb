<div class="container">
  <h1>Cocktail details</h1>

  <h3><%= @cocktail.name %></h3>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  
  <h6>// how to</h6>
  <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %> | <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" }%></li>
      <% end %>
  </ul>
  
  <p>
    <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %> ---
    <%= link_to 'Create a new cocktail', new_cocktail_path %> ---
    <%= link_to "Cocktails overview", cocktails_path%>
  </p>

  
</div>
